<div class="title">Admin Dashboard</div>

<div class="subtitle">Add, Edit, and Delete products from this dashboard.</div>

<br>

<a href = "about/edit">Edit About Page</a>


<br>
<div class="title">Categories</div>

<%= link_to "Add new category", new_prod_category_path%>


<div id="categories" class="container">
  <% @prod_categories.each do |category| %>
    
    <div class="card">
      <div class="card-content">
        <%= category.name  %>
        <br>
        <%= link_to "Edit Category", edit_prod_category_path(category)%>
        <br>
        <%= link_to 'Delete Category', category, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>


<br>

<div class="title">Products</div>

<%= link_to "Add new product", new_product_path%>

<br>

<div id="products" class="container">
  <% @products.each do |product| %>
    
    <div class="card">
      <div class="card-content">
        <%= link_to product.manufacturer + " - " + product.name , product %>
        <br>
        CAD <%= number_to_currency(product.price) %>
        <br>
        <%= link_to "Edit Product", edit_product_path(product)%>
        <br>
        <%= link_to 'Delete Product', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>

